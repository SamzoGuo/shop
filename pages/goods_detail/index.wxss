/* pages/goods_detail/index.wxss */

.swiper {
  height: 715rpx;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.content {
  display: flex;
  justify-content: space-between;
  margin: 36rpx 0;
}

.content .left {
  padding-right: 70rpx;
}

.content .right {
  width: 140rpx;
  text-align: center;
  padding: 0 40rpx;
  border-left: 1px solid #999;
  color: #999;
}

.floor {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx
}

.btn{
  position: absolute;
  top: 0;
  left: 0;
  width:21%;
  opacity: 0;
}

.floor .left {
  display: flex;
  justify-content: space-around;
  text-align: center;
  background: #fff;
  width: 326rpx;
  color: #959595;
  font-size: 14px;
}

.floor .right {
  display: flex;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
}

